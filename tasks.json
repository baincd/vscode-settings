    "version": "2.0.0",
    "tasks": [
        {
            "label": "git commit",
            "detail": "commit staged changes",
            "type": "shell",
            "command": "git commit",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
            },
            "problemMatcher": [],
            "windows": {
                "options": {"shell": {"executable": "C:\\WINDOWS\\System32\\cmd.exe", "args": [ "/d", "/c" ]} } // https://github.com/microsoft/vscode/issues/36154#issuecomment-336403892
            }
        },
        {
            "label": "git commit: all",
            "detail": "commit all working directory changes",
            "type": "shell",
            "command": "git add -A && git commit",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
            },
            "problemMatcher": [],
            "windows": {
                "options": {"shell": {"executable": "C:\\WINDOWS\\System32\\cmd.exe", "args": [ "/d", "/c" ]} } // https://github.com/microsoft/vscode/issues/36154#issuecomment-336403892
            }
        },
        {
            "label": "git commit: amend",
            "detail": "amend staged changes to HEAD",
            "type": "shell",
            "command": "git commit --amend",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
            },
            "problemMatcher": [],
            "windows": {
                "options": {"shell": {"executable": "C:\\WINDOWS\\System32\\cmd.exe", "args": [ "/d", "/c" ]} } // https://github.com/microsoft/vscode/issues/36154#issuecomment-336403892
            }
        },
        {
            "label": "git logw",
            "detail": "launch gitk",
            "type": "shell",
            "command": "gitk",
            "options": {
                "cwd": "${fileDirname}"
            },
            "runOptions": {
                "instanceLimit": 10
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "group": "git-window",
                "close": true
            },
            "problemMatcher": [],
            "windows": {
                "options": {"shell": {"executable": "C:\\WINDOWS\\System32\\cmd.exe", "args": [ "/d", "/c" ]} } // https://github.com/microsoft/vscode/issues/36154#issuecomment-336403892
            }
        },
        {
            "label": "git logw: ${file}",
            "detail": "launch gitk for ${file}",
            "type": "shell",
            "command": "gitk -- ${fileBasename}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "runOptions": {
                "instanceLimit": 10
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "group": "git-window",
                "close": true
            },
            "problemMatcher": [],
            "windows": {
                "options": {"shell": {"executable": "C:\\WINDOWS\\System32\\cmd.exe", "args": [ "/d", "/c" ]} } // https://github.com/microsoft/vscode/issues/36154#issuecomment-336403892
            }
        },
        {
            "label": "git commit: commitw",
            "detail": "launch Git Gui",
            "type": "shell",
            "command": "git gui",
            "options": {
                "cwd": "${fileDirname}"
            },
            "runOptions": {
                "instanceLimit": 10
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "group": "git-window",
                "close": true
            },
            "problemMatcher": [],
            "windows": {
                "options": {"shell": {"executable": "C:\\WINDOWS\\System32\\cmd.exe", "args": [ "/d", "/c" ]} } // https://github.com/microsoft/vscode/issues/36154#issuecomment-336403892
            }
        },
    ]
}
